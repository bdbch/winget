{
  "name": "@bdbchgg/winget",
  "version": "1.0.0",
  "type": "module",
  "description": "A winget wrapper library to make working with the Winget CLI easier",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "CONTRIBUTE.md",
    "LICENSE",
    "docs.md"
  ],
  "author": {
    "name": "Dominik Biedebach",
    "url": "https://github.com/bdbch"
  },
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "tsup src/index.ts --dts --format esm,cjs --out-dir dist",
    "dev": "tsup src/index.ts --watch --dts --format esm,cjs",
    "test": "vitest",
    "coverage": "vitest coverage ./src",
    "format": "biome format ./src --write",
    "lint": "biome lint ./src",
    "version": "npx version"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@changesets/cli": "^2.29.3",
    "@types/node": "^22.15.17",
    "tsup": "^8.4.0",
    "typescript": "^5.8.3",
    "vitest": "^3.1.3"
  },
  "packageManager": "pnpm@10.10.0"
}
